<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/holo_blue_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/menuFromInstructionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/playFromInstructionsButton"
        android:layout_alignBottom="@+id/playFromInstructionsButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:onClick="menuClickHandler"
        android:text="menu" />

    <Button
        android:id="@+id/playFromInstructionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:onClick="playClickHandler"
        android:text="play" />

    <TextView
        android:id="@+id/textViewHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:fontFamily="casual"
        android:text="Instructions"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/instructionsView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewHeader"
        android:layout_alignStart="@+id/textViewHeader"
        android:layout_below="@+id/textViewHeader"
        android:layout_marginTop="74dp"
        android:fontFamily="casual"
        android:text="Sink your opponent's ships, before they sink yours!"
        android:textSize="18sp" />
</RelativeLayout>
