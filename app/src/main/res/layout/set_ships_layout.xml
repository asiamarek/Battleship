<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/holo_blue_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.battleship.BoardView
        android:id="@+id/settingBoardView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="35dp" />

    <Button
        android:id="@+id/startBattleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="38dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:text="Start the battle !"
        android:onClick="startBattleClickHandler" />

    <Button
        android:id="@+id/randomSettingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/startBattleButton"
        android:layout_alignBottom="@+id/startBattleButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:onClick="setShipsRandomlyHandler"
        android:text="Random" />

    <TextView
        android:id="@+id/placeShipsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/settingBoardView"
        android:layout_below="@+id/settingBoardView"
        android:fontFamily="casual"
        android:text="Place your ships"
        android:textSize="24sp" />
</RelativeLayout>
